pipeline {
    agent { docker { image 'maven:3.9.4-eclipse-temurin-17-alpine' } }
    stages {
        stage('Mach was') {
            steps {
                echo 'START'
            }
        } 
        stage('Erzeuge JAR') {
            steps {
                echo "Baue JAR"
                sh 'mvn package'
                echo "JAR gebaut"
            }
        }
        stage('Verteile was') {
            steps {
                echo 'Kopiere das Ergebnis'
                sh 'cp target/*.jar /home/student '
                echo 'Ergebnis kopiert'
            }
        }
    }
    post {
        always {
             echo 'Ever'
        }
        success {
            echo 'YES - Das klappt'
        }
        unstable {
            echo 'UPS was ist das '
        }
        failure {
            echo 'Nix gut !'
        }
        changed {
            echo 'Mhh, anders'
        }
    }
}
