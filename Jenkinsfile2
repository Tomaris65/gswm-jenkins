LOYpipeline {
    agent { docker { image 'maven:3.9.4-eclipse-temurin-17-alpine' } }
    environment { 
        TARGET = '/home/student'
    }
    parameters {
        string(name: 'PERSON', defaultValue: 'Nobody', description: 'Who should I say hello to?')
        booleanParam(name: 'DEPLOY', defaultValue: false, description: 'Deploy oder nicht deploy, das ist hier die Frage')
    }
    stages {
        stage('Sag Hallo') {
            steps {
                echo 'Hallo'
                echo 'Welt'
            }
        } 
        stage('Patch 1 Basis') {
            when {
                branch 'patch-1'
            }
            steps {
                echo 'BASIS'
                echo "Hello ${params.PERSON}"
            }
        }
        stage('Patch 1 - Deploy') {
            when {
                branch 'patch-1'
            }
            steps {
                echo 'DEPLOY'
                echo "DEPLOY ${params.DEPLOY}"
            }
        }
    }
    post {
        always {
             echo 'Immer !'
        }
        success {
            echo 'Das klappt'
        }
        unstable {
            echo 'UPS, was ist das '
        }
        failure {
            echo 'Nich gut !'
        }
        changed {
            echo 'Mhh, anders aber ...'
        }
    }
}
