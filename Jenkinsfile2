pipeline {
    agent { docker { image 'maven:3.9.4-eclipse-temurin-17-alpine' } }
    environment { 
        TARGET = '/home/student'
    }
    parameters {
        string(name: 'PERSON', defaultValue: 'Nobody', description: 'Who should I say hello to?')
    }
    stages {
        stage('Sag Hallo') {
            steps {
                echo 'Hallo'
                echo 'Welt'
            }
        } 
        stage('Patch') {
            when {
                branch 'patch-1'
            }
            steps {
                echo 'PATCH1'
                echo "Hello ${params.PERSON}"
            }
        }
    }
    post {
        always {
             echo 'Immer !'
        }
        success {
            echo 'Das klappt'
        }
        unstable {
            echo 'UPS, was ist das '
        }
        failure {
            echo 'Nich gut !'
        }
        changed {
            echo 'Mhh, anders aber ...'
        }
    }
}
