pipeline {
    agent { docker { image 'maven:3.9.4-eclipse-temurin-17-alpine' } }
    stages {
        stage('Mach was ') {
            steps {
                sh 'ls'
            }
        }
    }
    post {
        always {
            echo 'Immer'
            deleteDir() /* clean up our workspace */
        }
        success {
            echo 'YES - Das klappt'
        }
        unstable {
            echo 'UPS was ist das '
        }
        failure {
            echo 'Nix gut !'
        }
        changed {
            echo 'Mhh, anders'
        }
    }
}
